<!DOCTYPE html>
<html>
<head>
  <title>ConManagementSite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%# Render elements on all pages %>
	<%# Site navbar %>
	<nav class="navbar cp75-colors">
    <%# Link to CP75 home page %>
		<div class="container-fluid">
			<div class="navbar-header">
				<b><a class="navbar-brand cp75-text" href="/">Con-Planner 75<!-- <span class="glyphicon glyphicon-home"></span>--></a></b>
			</div>

			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-right">
          <%# User navigation dropdown %>
					<li class="dropdown">
            <a href="#" class="dropdown-toggle cp75-colors" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-user"></span></a>
            <ul class="dropdown-menu">
              <% if logged_in? %>
                <li><a href="/conventions/mine">My Conventions</a></li>
                <li><%= link_to "Log out", "/logout", method: "post" %></li>
              <% else %>
                <li><a href="/signup">Sign up</a></li>
                <li><a href="/login">Log in</a></li>
              <% end %>
            </ul>
          </li>
				</ul>
			</div>
		</div>

	</nav>

  <%# Render page-specific elements %>
	<%= yield %>

</body>
</html>
