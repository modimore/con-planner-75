<ol class="breadcrumb">
	<li><a href="/convention/<%= params[:name] %>/index"><%= params[:name] %></a></li>
	<li class="active">Details</li>
</ol>

<div class="container">
	<div class="row-fluid">
		<div class="col-xs-12">
			<div class="well">
				<a href="/convention/<%= params[:name] %>/events/add">Add event</a>
			</div>
		</div>
		<div class="col-xs-12">

			<% @events.each do |e| %>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3><%= e.name %><div class="pull-right"><button class="btn btn-default"><a href="#trash-event"><span class="glyphicon glyphicon-trash"></span></a></button></div></h3>
				</div>
				<div class="panel-body">
					<p><b>Host:</b> <%= e.host_name %></p>
					<p><b>Description:</b> <%= e.description %></p>
				</div>
			</div>
			<% end %>

		</div>

	</div>
</div>
