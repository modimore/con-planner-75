<ol class="breadcrumb">
	<li><a href="/convention/<%= params[:con_name] %>/index"><%= params[:con_name] %></a></li>
	<li class="active">Details</li>
</ol>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<form class="form-inline">
				<div class="form-group">
					<label for="max-schedules">Number of schedules to generate: </label>
					<input type="number" min="1" value="5">
				</div>
				<button type="submit" class="btn btn-default">Generate Schedules</button>
			</form>
		</div>
	</div>
</div>

<% @schedule.keys.each do |r| %>
  <%= r %>
	<ul>
	  <% @schedule[r].each do |e| %>
		  <li><%= "#{e.name}: #{ (@con.start + e.times[0][0]*3600).to_s(:details_display) } - #{ (@con.start + e.times[0][1]*3600).to_s(:details_display) }" %></li>
		<% end %>
	</ul>
<% end %>
