<ol class="breadcrumb">
	<li><a href="/convention/<%= params[:convention_name] %>/index"><%= params[:convention_name] %></a></li>
	<li class="active">Details</li>
</ol>

<div class="container">
	<div class="row">

		<%# Convention document list %>
		<div class="col-xs-8">
			<div class="panel panel-default">
				<div class="panel-heading"><h4>Documents</h4></div>
				<table class="table">
					<tbody>
						<% @documents.each do |d| %>
						<tr><td><a><%= d.display_name %></a></td></tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>

		<%# Document upload form %>
		<div class="col-xs-4">
			<div class="panel panel-default">
				<div class="panel-heading"><h4>Document Upload</h4></div>
				<div class="panel-body">
					<%= form_tag({ action: :upload_document }, multipart: true) do %>
						<%= label_tag(:display_name, "Document Name") %><br>
						<%= text_field_tag :display_name %><br>
						<%= file_field_tag 'document' %>
						<%= submit_tag("Upload") %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
